<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                android:id="@+id/change_password_title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/change_password_input_new_password"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/ic_password_blue_24dp"
                app:passwordToggleTint="@color/blue">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/change_password_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/blue" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/change_password_input_repeat_password"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/ic_password_blue_24dp"
                app:passwordToggleTint="@color/blue">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/change_password_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/repeat_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/blue" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="15dp">

                <Button
                    android:id="@+id/change_password"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/btn_change"
                    android:textColor="@color/white"
                    android:background="@color/blue"/>

                <Button
                    android:id="@+id/cancel_password"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:background="@color/blue"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>